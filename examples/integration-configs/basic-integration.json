{
  "specPath": "./openapi.yml",
  "outputDir": "./test-results",
  "environments": [
    {
      "name": "staging",
      "baseURL": "https://api-staging.example.com",
      "authProfile": "staging-auth",
      "variables": {
        "ENV": "staging",
        "LOG_LEVEL": "info",
        "API_VERSION": "v1"
      },
      "mockServer": {
        "enabled": true,
        "port": 3001,
        "scenarios": ["default", "error-responses"]
      }
    }
  ],
  "testSuites": [
    {
      "name": "Functional Tests",
      "type": "functional",
      "enabled": true,
      "config": {
        "includeNegative": true,
        "includeBoundary": true,
        "timeout": 30000,
        "maxEndpoints": 10
      },
      "dependencies": [],
      "retries": 2,
      "parallel": true
    },
    {
      "name": "Contract Validation",
      "type": "contract",
      "enabled": true,
      "config": {
        "strict": true,
        "validateExamples": true,
        "validateSecurity": false
      },
      "dependencies": [],
      "retries": 1,
      "parallel": true
    },
    {
      "name": "Integration Tests",
      "type": "integration",
      "enabled": true,
      "config": {
        "testComponentIntegration": true,
        "testWorkflowIntegration": false
      },
      "dependencies": ["Functional Tests", "Contract Validation"],
      "retries": 1,
      "parallel": false
    }
  ],
  "workflows": [
    {
      "name": "Smoke Test",
      "description": "Quick validation of core functionality",
      "steps": [
        {
          "type": "setup",
          "name": "Initialize Environment",
          "config": {
            "environment": "staging"
          }
        },
        {
          "type": "auth",
          "name": "Configure Authentication",
          "config": {
            "profile": "staging-auth"
          }
        },
        {
          "type": "generate",
          "name": "Generate Basic Tests",
          "config": {
            "includeOnly": ["GET", "POST"],
            "maxEndpoints": 5
          }
        },
        {
          "type": "validate",
          "name": "Quick Contract Validation",
          "config": {
            "strict": false
          }
        },
        {
          "type": "cleanup",
          "name": "Cleanup Resources",
          "config": {}
        }
      ],
      "environments": ["staging"],
      "conditions": []
    }
  ],
  "parallelism": 2,
  "timeout": 300000,
  "cleanup": true,
  "monitoring": false,
  "reportFormats": ["html", "json"]
}