# AI API Test Automation - Environment Configuration Template
# Copy this file to .env.local, .env.test, or .env for specific environments

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Production PostgreSQL (recommended)
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@localhost:5432/ai_api_test_automation

# Development SQLite (for local development)
# DATABASE_URL=sqlite:///./test_automation.db

# Test Database (separate from main database)
TEST_DATABASE_URL=sqlite:///./test_automation_test.db

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis for caching and session management
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=YOUR_REDIS_PASSWORD

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret for token signing (generate a secure random string)
JWT_SECRET=your-super-secure-jwt-secret-key-here

# API Keys
API_KEY=your-api-key-here
APIFOX_WEBHOOK_SECRET=your-apifox-webhook-secret

# Webhook signing key
WEBHOOK_SIGNING_KEY=your-webhook-signing-key

# =============================================================================
# EXTERNAL API TESTING CREDENTIALS
# =============================================================================

# Test API Base URL
TEST_API_BASE_URL=https://api.example.com

# Authentication credentials for testing
TEST_EMAIL=test@example.com
TEST_PASSWORD=test-password
TEST_AUTH_TOKEN=test-auth-token
TEST_API_KEY=test-api-key

# Expired/Invalid tokens for negative testing
TEST_EXPIRED_TOKEN=expired-token-here
TEST_LIMITED_TOKEN=limited-token-here
TEST_REVOKED_TOKEN=revoked-token-here

# =============================================================================
# TEST DATA CONFIGURATION
# =============================================================================

# Test entity IDs
TEST_CAMPAIGN_ID=test-campaign-123
TEST_BUSINESS_ID=test-business-456

# Test cookies for session-based testing
TEST_COOKIE_HPVN=test-cookie-value
TEST_COOKIE_PERM_TID=test-cookie-value
TEST_COOKIE_FBP=test-cookie-value
TEST_COOKIE_INITIAL_TRAFFIC_SOURCE=test-cookie-value
TEST_COOKIE_HJ_SESSION=test-cookie-value
TEST_COOKIE_HJ_SESSION_USER=test-cookie-value
TEST_COOKIE_CONNECT_SID=test-cookie-value

# =============================================================================
# PERFORMANCE TESTING CONFIGURATION
# =============================================================================

# Concurrency settings
CONCURRENCY_MAX_USERS=10
CONCURRENCY_REQUESTS_PER_USER=5
CONCURRENCY_TIMEOUT=60

# Performance test settings
PERFORMANCE_DURATION_SECONDS=60
PERFORMANCE_MAX_RPS=100

# Boundary testing
BOUNDARY_TEST_ENABLED=true
BOUNDARY_STRING_MAX_LENGTH=1000

# =============================================================================
# FILE SYSTEM CONFIGURATION
# =============================================================================

# Directories
TEST_OUTPUT_DIR=./tests/generated
REPORTS_DIR=./reports
LOGS_DIR=./logs

# =============================================================================
# RETRY AND TIMEOUT CONFIGURATION
# =============================================================================

# Retry settings
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY=1

# Timeout settings
TEST_TIMEOUT=30
TEST_RETRY_COUNT=3

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

# Prometheus metrics
PROMETHEUS_PORT=9090
ENABLE_METRICS=true

# Grafana
GRAFANA_PASSWORD=your-grafana-password

# =============================================================================
# CONTAINER REGISTRY AND DEPLOYMENT
# =============================================================================

# Docker registry configuration
DOCKER_REGISTRY=ghcr.io
IMAGE_NAME=ai-api-test-automation
VERSION=latest

# Kubernetes configuration
KUBE_NAMESPACE=ai-api-test-automation

# =============================================================================
# CLOUD PROVIDER CONFIGURATION (for backups and storage)
# =============================================================================

# AWS Configuration
AWS_REGION=us-west-2
AWS_S3_BUCKET=your-backup-bucket

# Google Cloud Configuration
GCS_BUCKET=your-backup-bucket
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup settings
BACKUP_RETENTION_DAYS=30
BACKUP_MAX_AGE_MINUTES=1440

# PostgreSQL backup specific
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ai_api_test_automation
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password

# Grafana database reader credentials
POSTGRES_GRAFANA_PASSWORD=your-grafana-db-password

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================

# Domain configuration
DOMAIN=ai-test-automation.example.com
API_DOMAIN=api.ai-test-automation.example.com

# Cloudflare (for Let's Encrypt DNS challenge)
CLOUDFLARE_EMAIL=your-email@example.com
CLOUDFLARE_DNS_API_TOKEN=your-cloudflare-token

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development mode settings (only for non-production)
DEBUG=false
RELOAD=true
ACCESS_LOG=true